{% set _locale = app.request.locale %}
{% set _user = app.user %}
<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <span
                id="navbarUserMenu"
                class="nav-link dropdown-toggle"
                data-toggle="dropdown"
                aria-haspopup="false"
                aria-expanded="true"
        ><img src="{{ avatar(_user) }}" class="img-thumbnail rounded" alt=""/> {{ _user.name }}</span>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarUserMenu">
            <a class="dropdown-item"
               href="{{ path('profile', { '_locale':_locale, 'id': _user.id }) }}"
            >{{ 'profile'|trans }}</a>
            <a class="dropdown-item"
               href="{{ path('settings', { '_locale':_locale }) }}"
            >{{ 'settings'|trans }}</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item"
               href="{{ logout_path('main') }}"
            >{{ 'logout'|trans }}</a>
        </div>
    </li>
</ul>
